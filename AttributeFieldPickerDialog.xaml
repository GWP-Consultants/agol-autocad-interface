<Window x:Class="ArcGisAutoCAD.AttributeFieldPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Attribute Field" Height="160" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Select the ArcGIS attribute field to use for the block attribute:" Margin="0,0,0,10"/>
        <ComboBox x:Name="FieldCombo" Width="250" Margin="0,0,0,10"/>
        <Button Content="OK" Width="70" HorizontalAlignment="Right" Click="Ok_Click"/>
    </StackPanel>
</Window>
